{
  "rules": [
    {
      "intent": "weibo_hot_to_docx",
      "plan_type": "python",
      "match_any": ["微博热搜", "weibo", "热搜榜"],
      "requirements": {
        "script_name": "weibo_hot_to_docx.py",
        "outputs": ["hot.docx"],
        "pip": ["python-docx", "requests"]
      },
      "extractors": [
        {"name": "count", "pattern": "前(\\d+)条"}
      ],
      "template_key": "weibo_hot_to_docx"
    },
    {
      "intent": "web_weather_to_excel",
      "plan_type": "python",
      "match_any": ["天气", "weather", "气象", "excel", "表格", "xlsx", "北京", "北京市", "中国天气预报网", "weather.com.cn"],
      "requirements": {
        "script_name": "weather_to_excel.py",
        "outputs": ["weather.xlsx"],
        "pip": ["requests", "openpyxl"]
      },
      "extractors": [
        {"name": "city", "pattern": "(北京|北京市)"},
        {"name": "hours", "pattern": "未来(\\d+)个?小时"},
        {"name": "date", "pattern": "(20\\d{2}[./-]\\d{2}[./-]\\d{2})"}
      ],
      "required_params": ["city", "hours"],
      "template_key": "web_weather_to_excel"
    },
    {
      "intent": "get_android_build_fingerprint",
      "plan_type": "bash",
      "match_any": ["\\badb\\b", "fingerprint", "设备指纹", "指纹.*设备"],
      "requirements": {
        "script_name": "get_fingerprint.sh",
        "outputs": ["fingerprint.txt"],
        "tools": ["adb"]
      },
      "extractors": []
    },
    {
      "intent": "create_docx_line",
      "plan_type": "python",
      "match_any": ["\\bword\\b", "docx", "word文档"],
      "requirements": {
        "script_name": "make_docx.py",
        "outputs": ["output.docx"],
        "pip": ["python-docx"]
      },
      "extractors": [
        {"name": "line", "pattern": "写一行([^，。\\n\\r,.!?！？」]+)"}
      ],
      "required_params": ["line"]
    }
  ],
  "default": {
    "intent": "create_helloworld_c",
    "plan_type": "c",
    "requirements": {
      "filename": "helloworld.c",
      "binary": "hello",
      "expected_output": "Hello, World!\\n"
    }
  }
}
